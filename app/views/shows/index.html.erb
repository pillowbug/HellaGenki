<div class="hero-banner bg-cover up-slant">
  <div class="hero-content " style="background-color:white;">
    <h1>HellaGenki</h1>
    <h2>Keep track of your favorite anime here</h2>
  </div>
</div>
<div class="inner content">
  <div class="shows-section pt50">
    <div class="section-nav">
      <h2 class="section-header">Show List</h2>
      <%= link_to "Add a show +", new_show_path, class: "btn-white shadow fancy-glow" %>
    </div>
    <% @shows.each do |show| %>
      <div class="show-card mt20 shadow">
        <div class="show-image float50 right"></div>
        <div class="show-info float50">
          <h3><%= link_to show.title, show_path(show) %></h3>
          <p><%= show.description %></p>
          <%= link_to "See More", show_path(show), class: "faded" %>
        </div>
      </div>
    <% end %>
  </div>
</div>


